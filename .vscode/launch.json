{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Acquire",
      "type": "python",                    // ← use the Python extension’s debugger
      "request": "launch",
      "module": "strawberry.acquisition.acquire",
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Validate",
      "type": "python",                    // ← use the Python extension’s debugger
      "request": "launch",
      "module": "strawberry.validation.validate",
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Fact Q Financials",
      "type": "python",                    // ← use the Python extension’s debugger
      "request": "launch",
      "module": "strawberry.transform.fact_qtr_financials",
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Dim Stocks",
      "type": "python",                    // ← use the Python extension’s debugger
      "request": "launch",
      "module": "strawberry.transform.dim_stocks",
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "UI",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${workspaceFolder}/src/ui/app.py"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Data Viewer",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${workspaceFolder}/src/strawberry/ui/data_viewer.py"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
